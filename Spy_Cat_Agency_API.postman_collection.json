        },
        {
          "name": "Delete Spy Cat",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/spy-cats/{{cat_id}}",
              "host": ["{{base_url}}"],
              "path": ["spy-cats", "{{cat_id}}"]
            }
          }
        }
      ]
    },
    {
