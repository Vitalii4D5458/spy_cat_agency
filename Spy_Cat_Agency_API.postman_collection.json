            "body": {
              "mode": "raw",
              "raw": "{\n    \"targets\": [\n        {\n            \"name\": \"John Doe\",\n            \"country\": \"USA\"\n        },\n        {\n            \"name\": \"Jane Smith\",\n            \"country\": \"Canada\"\n        }\n    ]\n}"
